---
import icons from "@data/icons.json";
import type { HTMLAttributes } from "astro/types";
import type { IconKey } from "src/env";

interface Props extends HTMLAttributes<"svg"> {
  name: IconKey;
  width?: string | number;
}

const { name, width, ...props } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 16 16"
  fill="CurrentColor"
  width={width || "1em"}
  {...props}
  set:html={icons[name]}
/>
