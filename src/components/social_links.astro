---
import { Icon } from "astro-icon/components";

const links = [
  { platform: "github", icon: "bi:github" },
  { platform: "linkedin", icon: "bi:linkedin" },
  { platform: "twitter", icon: "bi:twitter-x" },
  { platform: "facebook", icon: "bi:facebook" },
];
---

<nav class="col d-flex justify-content-md-end gap-2" aria-label="social">
  {
    links.map((link) => (
      <a
        class="p-1  text-decoration-none"
        href={`https://${link.platform}.com/${
          link.platform === "linkedin" ? "in/" : ""
        }kenedyolisi`}
      >
        <Icon name={link.icon} size={20} />
      </a>
    ))
  }
</nav>
