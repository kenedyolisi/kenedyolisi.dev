---
interface SocialLink {
  platform: string;
}

const socialPlatforms: SocialLink[] = [
  { platform: "github" },
  { platform: "linkedin" },
  { platform: "twitter" },
  { platform: "facebook" },
];
---

<nav class="flex justify-center md:justify-end gap-4">
  {
    socialPlatforms.map(({ platform }) => (
      <a
        class="p-2 leading-4 hover:bg-primary dark:hover:bg-primary-dark hover:text-white rounded-md "
        href={`https://${platform}.com/${
          platform === "linkedin" ? "in/" : ""
        }kenedyolisi`}
        target="_blank"
        rel="noreferrer"
        aria-label={platform}
      >
        <span class={`icon icon-${platform}`} />
      </a>
    ))
  }
</nav>
