---
import BaseLayout from "@layouts/base_layout.astro";
import { Image } from "astro:assets";

import landingPage from "@images/kenedyolisi_landing_page.png";
import nextjsDashboard from "@images/nextjs_dashboard.png";

const title = "Projects";
---

<BaseLayout pageTitle={title}>
  <article>
    <h1 transition:animate="slide">{title}</h1>
    <p>üåê Explore my portfolio for a glimpse of my recent projects.</p>

    <div class="row g-4 flex-column flex-lg-row">
      <div class="col project text-center border border-2 rounded-2">
        <figure class="figure">
          <Image
            class="figure-image object-fit-cover img-fluid img-trigger"
            src={landingPage}
            alt="kenedyolisi landing page"
          />
          <figcaption class="figure-caption">
            kenedyolisi.vercel.app landing page
          </figcaption>
        </figure>
        <a class="btn btn-primary m-3" href="https://kenedyolisi.vercel.app">
          Go to project</a
        >
      </div>
