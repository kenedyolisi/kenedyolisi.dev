---
import { images } from "@data/index";
import projects from "@data/projects";
import technologies from "@data/technologies.json";
import Layout from "@layouts/layout.astro";
import { Picture } from "astro:assets";
import { capitalizeStr } from "src/utils";

const { id } = Astro.params;

if (id === undefined) {
  throw new Error("Project id is required");
}

const project = projects.find((project) => {
  return project.id === id ? project : null;
});

if (project === undefined) {
  return Astro.redirect("/404");
}

const { title, techs, image } = project;
---

<Layout pageTitle={`${capitalizeStr(title)} | Projects`}>
  <main>
    <h1 class="capitalize">{title}</h1>
    <h2>Technologies</h2>

    <ul class="inline-flex gap-3 my-2">
      {
        techs.map((tech) => {
          const brandColor = technologies[tech].brandColor;

          return (
            <li
              class={`p-2 rounded-md capitalize text-white `}
              style={`background-color: ${brandColor}`}
            >
              {tech}
            </li>
          );
        })
      }
    </ul>

    <Picture
      class="border-2 w-full md:w-3/4 mx-auto rounded-lg"
      src={images[image]()}
      alt={title}
      formats={["webp", "avif"]}
    />
  </main>
</Layout>
