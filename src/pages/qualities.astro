---
import { Icon } from "astro-icon/components";
import BaseLayout from "@layouts/base_layout.astro";
import qualities from "@data/qualities.json";

const title = "Why Choose My Services";
---

<BaseLayout pageTitle={title}>
  <article aria-label={title}>
    <h1 transition:animate="slide">{title}?</h1>

    <div class="flex flex-column flex-wrap gap-6">
      {
        qualities.map(({ title, description, icon }) => (
          <section class="grow w-full odd:sm:w-1/3 even:sm:w-1/4 sm:min-w-[300px] p-4 rounded-xl border-2 hover:shadow-lg hover:border-primary">
            <div class="inline-flex items-center gap-4">
              {icon && (
                <Icon
                  class="text-primary dark:text-primary-dark"
                  name={icon}
                  size={50}
                />
              )}
              <h2 class="text-2xl capitalize">{title}</h2>
            </div>
            <p>{description}</p>
          </section>
        ))
      }
    </div>
  </article>
</BaseLayout>
